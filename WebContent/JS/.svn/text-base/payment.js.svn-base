function validate()
{
	
	var card=document.makepayment.cardnumber.value;
	if(card=="")
	{
		alert("Please enter Card number");
	return false;
	}
	if(isNaN(card))
	{
		alert("Please enter Card number in number format");
	return false;
	}
	
	var cvv=document.makepayment.cvv.value;
	if(cvv==""||cvv.length!=3)
	{
		alert("Please enter valid CVV");
	return false;
	}
	if(isNaN(cvv))
	{
		alert("Please enter CVV in number format");
	return false;
	}
	
}

function validatePayment()
{

	var pass=document.pay.pass.value;
	if(pass=="")
	{
		alert("Please enter valid password");
	return false;
	}
	
}